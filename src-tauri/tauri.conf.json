{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run start",
    "devPath": "http://localhost:3000",
    "distDir": "../build",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Wisburg",
    "version": "0.9.4"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.wisburg.terminal",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": ["zh-CN"]
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://tauri-updater.wisburg.com/terminal/{{target}}-{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEUxRTdDNzdFRjkxMDYwRjkKUldUNVlCRDVmc2ZuNFYvcVdkSVdoUUZkM29rdlVKOXY2OVg3bzdEbHNEMGhZNWJzNWpCUnYxUE4K"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 700,
        "minHeight": 600,
        "resizable": true,
        "title": "智堡终端",  
        "width": 1000,
        "minWidth": 800,
        "theme": "Dark",
        "visible": false
      },
      {
        "width": 400,
        "height": 400,
        "center": true,
        "decorations": false,
        "url": "splashscreen.html",
        "label": "splashscreen"
      },
      {
        "visible": true,
        "width": 600,
        "height": 600,
        "title": "智堡终端",  
        "url": "https://open.weixin.qq.com/connect/qrconnect?appid=wxe7d39940a780faf7&redirect_uri=https%3A%2F%2Fwww.wisburg.com%2Fwechat.html%3Fredirect_to%3Dhttps%3A%2F%2Fwww.wisburg.com%2F?action=terminal-login&response_type=code&scope=snsapi_login&state=wx_login&style=white&href=data:text/css;base64,",
